using Gtk 4.0;
using Adw 1;

template $ExmCommentTile : Gtk.Widget {
  styles ["comment-tile"]

  Gtk.Box {
    orientation: vertical;

    Gtk.Box {
      orientation: horizontal;

      Gtk.Label author {
        styles ["dim-label"]
        xalign: 0;
      }

      Gtk.Label author_badge {
      	styles ["author-badge"]
      	label: _("Author");
      }

      $ExmRating rating {
        halign: end;
        hexpand: true;
      }
    }

    $TextDisplay display {}
  }
}
